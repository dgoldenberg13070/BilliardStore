@model Order
@{
    ViewData["Title"] = "Index";
}
<h2>Thanks!</h2>
<p>Thanks for placing your order.</p>
<p>We'll ship your goods as soon as possible.</p>
<br />
<h2>Details for Order #@Model.TrackingNumber</h2>
<dl>
    <dt>Order Date</dt>
    <dd>@Model.PlacementDate.ToShortDateString()</dd>
    <dt>Ship Date</dt>
    @*<dd>@(Model.ShipDate.HasValue ? Model.ShipDate.Value.ToShortDateString() : "Not Shipped")</dd>
    <dt>Delivered Date</dt>
    <dd">@(Model.DeliveryDate.HasValue ? Model.DeliveryDate.Value.ToShortDateString() : "Not Delivered")</dd">*@
</dl>
<ul>
    @foreach (var item in Model.Lines)
    {
        <li>@item.ProductName (quantity: @item.Quantity)</li>
    }
</ul>

